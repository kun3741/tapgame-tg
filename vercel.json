{
  "version": 2,
  "builds": [
      {
          "src": "api/routes/user.js",
          "use": "@vercel/node"
      },
      {
          "src": "api/routes/update.js",
          "use": "@vercel/node"
      },
      {
          "src": "public/**",
          "use": "@vercel/static"
      }
  ],
  "routes": [
      { "src": "/api/user/(.*)", "dest": "/api/routes/user.js" },
      { "src": "/api/update/(.*)", "dest": "/api/routes/update.js" },
      { "src": "/(.*)", "dest": "/public/$1" }
  ],
  "rewrites": [
    { "source": "/(.*)", "destination": "/api" }
  ],
  "installCommand": "npm i cors express mongoose dotenv node-telegram-bot-api path"
}
